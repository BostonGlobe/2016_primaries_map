header
	width 100%
	border-bottom solid #cccccc 1px
	margin-bottom 1em
	position relative
	div
		display inline-block
	span
		font-family $benton

	.title
		span
			font-weight bold
			color #333

		abbr
			display inline
			@media screen and (min-width: $tiny)
				display none

		.name
			display none
			@media screen and (min-width: $tiny)
				display inline

	.updater
		position absolute
		bottom 0
		right 0

		span
			color #999
			text-align right
			white-space nowrap

		.shadow
			visibility hidden

		.text
			position absolute
			bottom 0




.parties
	width 100%
	overflow hidden

	@media screen and (min-width: $small)

		.party
			width 48%

			&.dem
				float left

			&.gop
				float right

.parties .party:first-child
	margin-bottom 1em

a.button
	width 100%
	border 1px solid #ccc
	color #222
	font($benton, $bold)
	padding 0.75em 1em
	font-size 0.7em
	border-radius 3px
	background-color #efefef
	text-align center
	display inline-block
	line-height 1
	margin-top 1em
	transition background-color 0.2s ease-in-out

	&:hover
		background-color #ddd
		color #222
